block append
    .container
        #contactModal.modal.fade.hide(tabindex='-1', role='dialog', aria-labelledby='basicModal', aria-hidden='true')
         .modal-dialog
           .modal-content
             .modal-header
               button.close.btnModalCancel(type='button', data-dismiss='modal', aria-hidden='true') Ã—
               h4#myModalLabel.modal-title #{appMenuLangVar[0].nav_modal_contact_title}
             .modal-body
                form(id='contactModalForm' role='form', action='/index-contact/#{langVar}',method='post', style='max-width: 100%',  onsubmit='',enctype='multipart/form-data') 
                 button.btn.btn-default(type='submit',style='float:left;')
                  span
                    img(src='/icons/mail.png',style='max-width:36px;')
                 .form-group.form-inline(style='margin-top:15px;float:right;margin-right:7%;height:40px;')
                   label.control-label.elementLabel(for='email_From') #{appMenuLangVar[0].nav_contact_emailFrom}:
                    if (!user)
                     input#email_From.elementValue(type='text', name='email_From',maxlength ='25',style='height:100%;',value='')
                    else 
                     input#email_From.elementValue(type='text', name='email_From',maxlength ='25',style='height:100%;',value='#{user.contactInfo.con_Email}') 
                 .form-group.form-inline.hide(style='margin-top:5px;float:right;margin-right:7%;height:40px;')
                    input#email_To.elementValue.hide(type='text', name='email_To',maxlength ='25',style='height:100%;',value='#{productsVar[0].contactInfo.con_Email}') 
                 .form-group.form-inline(style='margin-top:5px;float:right;margin-right:7%;height:40px;')
                   label.control-label.elementLabel(for='email_Subject') #{appMenuLangVar[0].nav_contact_emailSubject}:
                    input#email_To.elementValue(type='text', name='email_Subject',maxlength ='25',style='height:100%;')
                 .form-group.form-inline(style='margin-top:5px;float:right;margin-right:7%;height:240px;')
                   label.control-label.elementLabel(for='email_Subject') #{appMenuLangVar[0].nav_contact_emailText}:
                    textarea#email_Data.elementText(rows='10', cols='190', maxlength='1020', name='email_Data')
  



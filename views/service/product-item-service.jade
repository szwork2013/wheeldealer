body
block content
  include ../general/nav-commercial-top
  include nav-navbar-service
  include nav-navbar-service-mobile

  div#Menu.mobileDisplay(style='width:100%;float:left;')
     if (menuViewVar == 'on')
      a.abrir(id='abrir', href='?menu=off') &#8801
      a.fechar.hide(id='fechar', href='?menu=on') &#8801    
     else
      a.abrir.hide(id='abrir', href='?menu=off') &#8801
      a.fechar(id='fechar', href='?menu=on') &#8801    
  .row
    include nav-menu-service
    include product-item-service-det
script.
 $(document).ready(function() {    
   $(document).on('click', '.searchBtnOn', function () {
       $('#appNavSearch').show(100);
       $(this).removeClass('searchBtnOn');
       $(this).addClass('searchBtnOff');
   });
   $(document).on('click', '.searchBtnOff', function () {
       $('#appNavSearch').hide(100);
       $(this).removeClass('searchBtnOff');
       $(this).addClass('searchBtnOn');
   });
   $(document).on('click', '.abrir', function () {
      $(this).hide();
      $('#fechar').show();
      $('#appMenu').show(100);
   });    
   $(document).on('click', '.fechar', function () {
      $(this).hide();
      $('#abrir').show();
      $('#appMenu').hide(100);
  
   });    
 });
